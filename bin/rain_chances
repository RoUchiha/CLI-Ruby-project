#!/usr/bin/env ruby

require './environment/environment.rb'

require 'open-uri'
require 'nokogiri'
require 'addressable/uri'
require 'json'


def start
    puts "Hello. What zip code would you like today's rain chances for?"
    user_zip = gets.chomp.to_i
    Rain.new(user_zip)

    new_location
end

def new_location
    puts "Would you like to check another zip code? Y/N"
    yes_no = gets.chomp
    if yes_no == "Y" || yes_no == "y"
        start 
    elsif yes_no == "N" || yes_no == "n" || yes_no == "exit" || yes_no == "EXIT"
        exit
    else 
        new_location
    end
end


start



